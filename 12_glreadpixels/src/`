#include "ofApp.h"

//--------------------------------------------------------------
void ofApp::setup(){

	ofBackground(0, 0, 0);
	ofSetFrameRate(30);

	ofEnableAlphaBlending(true);

	for(int i = 0 ; i < bnum ; ++ i){
		fbo[i].allocate(ofGetWidth(), ofGetHeight(), GL_RGBA);
		pfbo[i] = &fbo[i];
	}

}

//--------------------------------------------------------------
void ofApp::update(){

	rad += 0.01;
	x = ofGetWidth()  / 2 + 100 * sin(rad * 5);
	y = ofGetHeight() / 2 + 100 * cos(rad * 6);

}

//--------------------------------------------------------------
void ofApp::draw(){

	pfbo[0] -> begin();
	ofClear(0, 0, 0, 0);

	ofSetColor(255, 0, 0);
	ofCircle(x, y, 30);
	pfbo[0] -> end();

	for(int i = 0 ; i < bnum ; ++ i){
	}

	
}

